{
  "name": "snake-evolution",
  "private": true,
  "version": "1.2.4",
  "description": "Transform your GitHub contribution graph into an epic snake animation",
  "repository": {
    "type": "git",
    "url": "https://github.com/miccy/snake-evolution"
  },
  "author": "Miccy <support@miccy.dev>",
  "license": "MIT",
  "scripts": {
    "prepare": "git config core.hooksPath .githooks 2>/dev/null || true",

    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@snake-evolution/web",
    "dev:api": "turbo run dev --filter=@snake-evolution/api",

    "build": "turbo run build",
    "build:web": "turbo run build --filter=@snake-evolution/web",
    "build:cli": "turbo run build --filter=@snake-evolution/cli",

    "test": "turbo run test",

    "lint": "biome check . && markdownlint-cli2 '*.md' 'docs/**/*.md' '.github/**/*.md' 'apps/*/src/**/*.md' 'apps/*/*.md' 'packages/*/*.md' 'packages/*/src/**/*.md' 'docker/*.md' 'scripts/*.md' '__tests__/*.md' --config .markdownlint.jsonc",
    "lint:fix": "biome check --fix --write . && markdownlint-cli2 --fix '*.md' 'docs/**/*.md' '.github/**/*.md' 'apps/*/src/**/*.md' 'apps/*/*.md' 'packages/*/*.md' 'packages/*/src/**/*.md' 'docker/*.md' 'scripts/*.md' '__tests__/*.md' --config .markdownlint.jsonc",

    "typecheck": "tsc --noEmit && turbo run type-check",

    "check": "bun run lint && bun run typecheck",
    "fix": "bun run lint:fix",

    "clean": "turbo run clean && rm -rf .turbo node_modules",
    "reinstall": "bun run clean && bun install",

    "snake": "bun run packages/cli/src/index.ts",
    "generate": "bun run packages/cli/src/index.ts generate",

    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "1.3.5",
    "jsonc-parser": "^3.3.1",
    "markdownlint-cli2": "^0.20.0",
    "turbo": "^2.7.1",
    "typescript": "5.9.3",
    "yaml": "2.8.2"
  },
  "engines": {
    "node": ">=22",
    "bun": ">=1.3.0"
  },
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "resolutions": {
    "cross-spawn": "^7.0.3",
    "http-cache-semantics": "^4.1.1",
    "semver-regex": "^3.1.4",
    "uuid": "^9.0.1"
  }
}
