{
  "name": "snake-evolution",
  "private": true,
  "version": "1.0.0",
  "description": "Transform your GitHub contribution graph into an epic snake animation",
  "repository": {
    "type": "git",
    "url": "https://github.com/miccy/snake-evolution"
  },
  "author": "Miccy <support@miccy.dev>",
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@snake-evolution/web",
    "dev:api": "turbo run dev --filter=@snake-evolution/api",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@snake-evolution/web",
    "build:api": "turbo run build --filter=@snake-evolution/api",
    "build:cli": "turbo run build --filter=@snake-evolution/cli",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "type-check": "tsc --noEmit",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "quality": "bun run lint && bun run format:check && bun run type-check && bun run test",
    "snake": "bun run packages/cli/src/index.ts",
    "generate": "bun run packages/cli/src/index.ts generate"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "^1.3.4",
    "turbo": "^2.6.3",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=22",
    "bun": ">=1.3.0"
  },
  "packageManager": "bun@1.3.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "resolutions": {
    "cross-spawn": "^7.0.3",
    "http-cache-semantics": "^4.1.1",
    "semver-regex": "^3.1.4",
    "uuid": "^9.0.1"
  }
}
