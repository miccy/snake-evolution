{
  "name": "snake-evolution",
  "private": true,
  "version": "1.0.0",
  "description": "Transform your GitHub contribution graph into an epic snake animation",
  "repository": {
    "type": "git",
    "url": "https://github.com/miccy/snake-evolution"
  },
  "author": "Miccy <support@miccy.dev>",
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@snake-evolution/web",
    "dev:docs": "turbo run dev --filter=@snake-evolution/docs",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@snake-evolution/web",
    "build:docs": "turbo run build --filter=@snake-evolution/docs",
    "build:action": "turbo run build --filter=@snake-evolution/action",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "quality": "bun run lint && bun run format:check && bun run type-check && bun run test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "^1.3.4",
    "turbo": "^2.6.3",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=22",
    "bun": ">=1.3.0"
  },
  "packageManager": "bun@1.3.4",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ]
}
