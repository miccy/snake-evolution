{
  "name": "@snake-evolution/cli",
  "version": "1.2.4",
  "description": "Generate animated snake eating your GitHub contributions",
  "license": "MIT",
  "author": "Miccy <support@miccy.dev>",
  "repository": {
    "type": "git",
    "url": "https://github.com/miccy/snake-evolution.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/miccy/snake-evolution",
  "bugs": {
    "url": "https://github.com/miccy/snake-evolution/issues"
  },
  "keywords": [
    "github",
    "contributions",
    "snake",
    "animation",
    "svg",
    "cli",
    "github-action",
    "profile-readme"
  ],
  "type": "module",
  "bin": {
    "snake": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target node --minify && (echo '#!/usr/bin/env node' && cat dist/index.js) > dist/index.tmp && mv dist/index.tmp dist/index.js && chmod +x dist/index.js",
    "prepublishOnly": "bun run build",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules"
  },
  "devDependencies": {
    "@snake-evolution/engine": "workspace:*",
    "@snake-evolution/github": "workspace:*",
    "@snake-evolution/renderer": "workspace:*",
    "@snake-evolution/types": "workspace:*",
    "@types/node": "^25.0.6",
    "commander": "^14.0.2"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  }
}
